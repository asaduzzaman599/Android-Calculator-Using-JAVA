<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:text=""
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/etNewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="bottom"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/layout1"
        android:textAlignment="viewEnd"
        android:singleLine="true"
        android:paddingRight="0dp"
        android:paddingBottom="2dp"
        android:text=""
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#000000"
        tools:ignore="RtlCompat" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/layout2"
    android:id="@+id/layout1">
        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddrefresh"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/plusMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/etNewItem"
            android:layout_toRightOf="@+id/refresh"
            android:layout_weight="1"
            android:onClick="onAddPlusMinus"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/percents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/etNewItem"
            android:layout_toRightOf="@+id/plusMinus"
            android:layout_weight="1"
            android:onClick="onAddPer"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/percents"
            android:onClick="onAddDel"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" /></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout3"
        android:id="@+id/layout2">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddSeven"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddEight"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddNine"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddDiv"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" /></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout4"
        android:id="@+id/layout3">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddFour"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddFive"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddSix"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:onClick="onAddMul"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" /></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout5"
        android:id="@+id/layout4">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddOne"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddTwo"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddThree"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddMin"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" /></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout5">
        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddDot"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddZero"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/Equ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddEqu"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" />
        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:onClick="onAddPlus"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless" /></LinearLayout>

</RelativeLayout>